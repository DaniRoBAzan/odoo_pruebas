<odoo>
    <data>
<!--        VISTA FORMULARIO-->
        <record id="view_new_custom_turns_form" model="ir.ui.view">
            <field name="name">view.custom.crm.turns.form</field>
            <field name="model">new_custom_turns.turn</field>
            <field name="arch" type="xml">
                <form string="Turns">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_state" type="object" class="oe_stat_button" string="Change state" icon="fa-play-circle"/>
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="customer"/>
                                <field name="date"/>
                                <field name="type"/>
                            </group>
                            <group name="group_right">
                                <field name="name"/>
                                <field name="done"/>
                                <field name="image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--VISTA LISTA-->
        <record id="view_cnew_custom_turns_tree" model="ir.ui.view">
            <field name="name">view.new.custom.turns.tree</field>
            <field name="model">new_custom_turns.turn</field>
            <field name="arch" type="xml">
                <tree string="Turns">
                    <field name="customer"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="done"/>
                    <button name="f_duplicate" string="Double" class="oe_highlight" type="object"/>
                    <button name="f_change_done" string="Attended" class="oe_highlight" type="object"/>
                    <button name="f_delete" string="Remove" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>
<!--VISTA TARJETAS O KANBAN-->
        <record id="view_new_custom_turns_kanban" model="ir.ui.view">
            <field name="name">view.new.ustom.turns.kanban</field>
            <field name="model">new_custom_turns.turn</field>
            <field name="arch" type="xml">
                <kanban class="o_new_custom_turns_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="date"/>
                    <field name="type"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('new_custom_turns.turn', 'image', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <field name="customer"/>
                                    </strong>
                                    <div t-if="record.date.value">
                                        <t t-esc="record.date.value"/>
                                    </div>
                                    <div t-if="record.type.value">
                                        <t t-esc="record.type.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
<!--VISTA SEARCH, BUSCADORES Y FILTROS DE VISTA LISTA-->
        <record id="view_new_custom_turns_search" model="ir.ui.view">
            <field name="name">view.new.custom.turns.search</field>
            <field name="model">new_custom_turns.turn</field>
            <field name="arch" type="xml">
                <search string="Filter turns">
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="type"/>
                    <field name="date"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_type" string="Type" domain="[]" context="{'group_by':'type'}"
                                help="Group by type"/>
                        <filter name="groupby_date" string="Date" context="{'group_by':'date:year'}"
                                help="Group by date"/>
                    </group>
                    <filter name="filter_by_done" string="State" domain="[('done','=','True')]"
                            help="Group by state of turn"/>
                </search>
            </field>
        </record>
<!--ACTION-->
        <record id="action_new_custom_turns_view" model="ir.actions.act_window">
            <field name="name">Turn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">new_custom_turns.turn</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Turns
                </p>
                <p>
                    Click 'New' to add a new turn!
                </p>
            </field>
        </record>

<!--HEREDAMOS VISTA FORMULARIO DEL SALE Y AGREGAMOS LA ZONA-->
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">view.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="zone" />
                </xpath>
            </field>
        </record>

<!--MENUES-->
        <menuitem id="menu_new_custom_turns_root" name="Turns" sequence="10"/>
        <menuitem id="menu_new_custom_turns_categ" name="Turn list" parent="menu_new_custom_turns_root" sequence="0"/>
        <menuitem id="menu_new_custom_turns" name="Turns" parent="menu_new_custom_turns_categ" sequence="0"
                  action="action_new_custom_turns_view"/>
    </data>
</odoo>